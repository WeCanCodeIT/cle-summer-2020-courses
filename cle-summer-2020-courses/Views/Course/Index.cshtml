@model IEnumerable<cle_summer_2020_courses.Models.Course>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Course</title>
    <link href="~/style.StyleSheet.css" rel="stylesheet" />
</head>
<body>
    <h1>Courses List</h1>
    @foreach (var course in Model)
    {
        <p>Title: <span>@course.Name</span></p>
        <p>Description: <span>@course.Description</span></p>
        <hr />
    }
</body>
</html>
